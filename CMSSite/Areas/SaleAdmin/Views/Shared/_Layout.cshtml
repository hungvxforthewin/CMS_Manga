                            </li>
                            @*<li class="dropdown-list__item">
                    <div class="dot @(currentUrl.Contains("/SALEADMIN/CONTRACTSTAFFSBANGIAO") ? "active" : "")"></div>
                    <a asp-area="SaleAdmin" asp-controller="ContractStaffs" class="dropdown-list__link">Danh sách hợp đồng bàn giao</a>
                </li>*@
                        </ul>
                    </li>
                    <li class="menu-list__item">
                        <a class="menu-list__link @(currentUrl.Contains("/SALEADMIN/RATINGSALE") || currentUrl.Contains("/SALEADMIN/CONTRACTSTAFFS") ? "active" : "")">
                            <div class="img">
                                <img style="width: 20px; height: 20px;" src="/Assets/SA/images/menu-left/QL Hợp đồng (1).svg" alt="" class="icon__cover" />
                                <img style="width: 20px; height: 20px;" src="/Assets/SA/images/menu-left/QL Hợp đồng.svg" alt="" class="icon__hover" />
                            </div>
                            Quản lí doanh số sale

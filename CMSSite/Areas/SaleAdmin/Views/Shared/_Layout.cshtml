                                <li class="dropdown-list__item" style="display: none;">
                                    <div class="dot"></div>
                                    <a href="/SaleAdmin/ShowUp/Index" class="dropdown-list__link">Danh sách Show up</a>
                                </li>
                                <li class="dropdown-list__item">
                                    <div class="dot @(currentUrl.Contains("/SALEADMIN/SHOWUP") ? "active" : "")"></div>
                                    <a href="/SaleAdmin/ShowUp/Index" class="dropdown-list__link">Danh sách sự kiện</a>
                                </li>
                                <li class="dropdown-list__item">
                                    <div class="dot @(currentUrl.Contains("/SALEADMIN/EXPECTEDINVESTOR") ? "active" : "")"></div>
                                    <a href="/SaleAdmin/ExpectedInvestor/Index" class="dropdown-list__link">Danh sách KH dự kiến</a>
                                </li>
                                <li class="dropdown-list__item">
                                    <div class="dot @(currentUrl.Contains("/SALEADMIN/CHECKINOUT") ? "active" : "")"></div>

@using CRMBussiness.ViewModel
@model BranchViewModel
<div class="header-modal">
    <h3 class="modal__title">chỉnh sửa chi nhánh</h3>
    <span title="close" modal-show="close" class="close__modal">
        <img src="/Assets/crm/images/employee-manage/close-modal.svg"
             alt="" />
    </span>
</div>
<form id="form-model-edit">
    <div class="body-modal add-employee_body-modal">
        <input hidden name="Id" value="@Model.Id" />
        <input hidden class="branchCode-value" name="BranchCode" value="@Model.BranchCode" />
        <input hidden class="hidden-staff" name="hidden-staff" value="@Model.CodeStaffAdminSale" />

        <!-- row 1 -->
        <div class="bs-row">
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label>Tên chi nhánh</label>
                    <input placeholder="Nhập tên chi nhánh" name="BranchName" value="@Model.BranchName" />
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label>Địa chỉ chi nhánh</label>
                    <input placeholder="Địa chỉ chi nhánh" name="Address" value="@Model.Address" />
                </div>
            </div>

        </div>
        <!-- row 2 -->
        <div class="bs-row">
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label >Admin Sale</label>
                    <select class="select2 select-staff" id="" name="CodeStaffAdminSale">
                        <option value="">--Admin Sale--</option>
                    </select>
                </div>
            </div>
            <!-- modal item -->
            @*<div class="bs-col md-33">
                    <div class="modal-item">
                        <label>Tình trạng</label>
                        <select class="select2 select-status-branch" name="Status">
                            <option value="">--Trạng thái--</option>
                            <option value="1">Đang hoạt động</option>
                            <option value="0">Đã khóa</option>
                        </select>
                    </div>
                </div>*@

            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label>Tình trạng</label>
                    <select class="select2" name="Status">
                        @if (Model.Status == "True")
                        {
                            <option value="1" selected="selected">Hoạt động</option>
                            <option value="0">Không hoạt động</option>
                        }
                        else
                        {
                            <option value="1">Hoạt động</option>
                            <option value="0" selected="selected">Không hoạt động</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="footer-modal">
    <button class="close__btn btn-green btn-update-branch"
            type="button">
        Cập nhật
    </button>
    <button modal-show="close"
            class="close__btn btn-gray"
            type="button">
        Hủy bỏ
    </button>
</div>
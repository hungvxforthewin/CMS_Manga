@model CRMSite.Models.Pagination<CRMBussiness.ViewModel.DisplayPersonalTableViewModel>
@section Styles{
    <link rel="stylesheet" type="text/css" href="/Assets/crm/css/tool.min.css" />
    <link rel="stylesheet" type="text/css" href="/Assets/crm/css/main.min.css" />
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <style>
        #main .main-content .tr_left-border table tr:hover td {
            color: #5f6fff;
        }
    </style>
}

<section class="section_employee-manage">
    <div class="module module-title">
        <img src="/Assets/crm/images/layout/left-arrow.svg" alt="" />
        <h2>Quản lý chi nhánh</h2>
    </div>
    <div class="module module-content">
        <div class="search search-box" style="margin: 32px 32px 8px;">
            <form id="search-form" style="width: 100%">
                <div class="bs-row" id="search-branch-set">
                    <!-- item -->
                    <div class="bs-col lg-50 xs-50">
                        <div class="search-item">
                            <label for="">Từ khóa</label>
                            <input type="text" placeholder="Tên chi nhánh, ID" name="Key" />
                        </div>
                    </div>
                    <!-- item -->
                    <div class="bs-col lg-50 xs-50">
                        <div class="search-item">
                            <label for="">Trạng thái</label>
                            <select class="select2 select-status-branch" name="Status">
                                <option value="">--Trạng thái--</option>
                                <option value="1">Đang hoạt động</option>
                                <option value="0">Đã khóa</option>
                            </select>
                        </div>
                    </div>
                    <!-- item -->
                    <div class="bs-col lg-50 xs-50">
                        <div class="search-item search-button">
                            <button type="button" class="btn-green" id="search-branch">Tìm kiếm</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>


        <div class="handle">
            <button class="add handle-button"
                    type="button"
                    id="btn-show-add">
                <img src="/Assets/crm/images/employee-manage/add.svg" alt="" /> Thêm mới
            </button>
             <button hidden id="btn-hiid-show" modal-show="show" 
                    modal-data="#add-branch_modal">
                
            </button>
            <button class="edit handle-button"
                    id="Edit-Branch"
                    type="button"
                    @*modal-show="show"
                    modal-data="#edit-employee_modal"*@>
                <div class="icon">
                    <img src="/Assets/crm/images/employee-manage/edit.svg" alt="" />
                </div>
                Chỉnh sửa
            </button>
            <button class="delete handle-button"
                    id="Del-Employ"
                    type="button">
                <div class="icon">
                    <img src="/Assets/crm/images/employee-manage/delete.svg" alt="" />
                </div>
                Xóa
            </button>
            <button class="delete-all handle-button"
                    id="Del-All-Employ"
                    type="button"
                    modal-show="show"
                    modal-data="#delete_all-employee_modal">
                <div class="icon">
                    <img src="/Assets/crm/images/employee-manage/delete.svg" alt="" />
                </div>
                Xóa tất cả
            </button>
            <button class="export handle-button">
                <div class="icon">
                    <img src="/Assets/crm/images/employee-manage/export.svg" alt="" />
                </div>
                Xuất file Excel
            </button>
        </div>
        @* Table *@
        <div class="data-table tr-bordered">
            <table>
                <tbody id="table-body">
                    <tr>
                        <th>
                            <div class="custom-checkbox check_all">
                                <input type="checkbox" />
                                <span class="checkmark"></span>
                            </div>
                        </th>
                        <th>Tên chi nhánh</th>
                        <th>Admin</th>
                        <th>Địa chỉ</th>
                        <th>Trạng thái</th>
                    </tr>
                </tbody>
            </table>
            <div class="select_pagination">
                <div class="select" id="size-page">
                    <p>Hiển thị từ <span class="from"></span> đến <span class="to"></span> trong tổng số <span class="total"></span> bản ghi. Hiển thị</p>
                    <select>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                    </select>
                    <p>&nbsp;bản ghi trên trang.</p>
                </div>
                <div class="pagination" id="pagination">
                </div>
            </div>
        </div>
        <!-- add modal -->
        <div class="bs-modal" id="add-branch_modal">
            <div class="modal-frame">
                <div class="content-modal">
                    <div class="header-modal">
                        <h3 class="modal__title">thêm mới chi nhánh</h3>
                        <span title="close" modal-show="close" class="close__modal">
                            <img src="/Assets/crm/images/employee-manage/close-modal.svg"
                                 alt="" />
                        </span>
                    </div>
                    <form id="form-model-add">
                        <div class="body-modal add-employee_body-modal">
                            <input hidden name="Id" />
                            <!-- row 1 -->
                            <div class="bs-row">
                                <!-- modal item -->
                                <div class="bs-col md-50">
                                    <div class="modal-item">
                                        <label>Tên chi nhánh</label>
                                        <input placeholder="Nhập tên chi nhánh" name="BranchName" />
                                    </div>
                                </div>
                                <!-- modal item -->
                                <div class="bs-col md-50">
                                    <div class="modal-item">
                                        <label>Địa chỉ chi nhánh</label>
                                        <input placeholder="Địa chỉ chi nhánh" name="Address" />
                                    </div>
                                </div>
 
                            </div>
                            <div class="bs-row">
                                <!-- modal item -->
                                <div class="bs-col md-50">
                                    <div class="modal-item">
                                        <label>Tình trạng</label>
                                        <select class="select2" name="Status">
                                            <option value="1">Hoạt động</option>
                                            <option value="0">Không hoạt động</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!-- row 2 -->
                        </div>
                    </form>
                    <div class="footer-modal">
                        <button class="close__btn btn-green btn-add-branch"
                                type="button">
                            Thêm mới
                        </button>
                        <button modal-show="close"
                                class="close__btn btn-gray"
                                type="button">
                            Hủy bỏ
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- edit modal -->
        <div class="bs-modal" id="edit-branch_modal">
            <div class="modal-frame">
                <div class="content-modal">

                </div>
            </div>
        </div>
        <!-- detail modal -->
        <div class="bs-modal" id="detail-employee_modal">
            <div class="modal-frame">
                <div class="content-modal">

                </div>
            </div>
        </div>
        <!-- delete modal -->
        <div class="bs-modal delete-modal" id="delete-employee_modal">
            <div class="modal-frame">
                <div class="content-modal">
                    
                </div>
            </div>
        </div>
        <!-- delete all modal -->
        <div class="bs-modal delete-modal" id="delete_all-employee_modal">
            <div class="modal-frame">
                <div class="content-modal">
                    <div class="header-modal">
                        <h3 class="modal__title"></h3>
                        <span title="close" modal-show="close" class="close__modal">
                            <img src="/Assets/crm/images/employee-manage/close-modal.svg"
                                 alt="" />
                        </span>
                    </div>
                    <div class="body-modal add-employee_body-modal">
                        <img src="/Assets/crm/images/employee-manage/delete-modal.png"
                             alt="" />
                        <p>Bạn có chắc chắn muốn xóa tất cả nhân sự không?</p>
                    </div>
                    <div class="footer-modal">
                        <button modal-show="close"
                                class="close__btn btn-green"
                                type="button">
                            Đồng ý
                        </button>
                        <button modal-show="close"
                                class="close__btn btn-gray"
                                type="button">
                            Hủy bỏ
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/Content/js/app.js"></script>
    <script src="~/Content/js/extend/method.js"></script>
    <script src="~/js/system.js"></script>
    <script src="~/js/controllers/branch.js"></script>
}
@using CRMBussiness.ViewModel
@model TeamInCompanyViewModel
<div class="header-modal">
    <h3 class="modal__title">chỉnh sửa nhóm</h3>
    <span title="close" modal-show="close" class="close__modal">
        <img src="/Assets/crm/images/employee-manage/close-modal.svg"
             alt="" />
    </span>
</div>
<form id="form-model-edit">
    <div class="body-modal add-employee_body-modal">
        <input hidden name="Id" value="@Model.Id" />
        <input hidden class="teamCode-value" name="TeamCode" value="@Model.TeamCode" />
        <input type="hidden" class="hidden-branch" value="@Model.BranchCode" />
        <input type="hidden" class="hidden-office" value="@Model.OfficeCode" />
        <input type="hidden" class="hidden-dept" value="@Model.DepartmentCode" />
        <input type="hidden" class="hidden-staff" value="@Model.CodeStaffLeader" />
        <!-- row 1 -->
        <div class="bs-row">
            <!-- item -->
            <div class="bs-col lg-50 xs-50">
                <div class="modal-item">
                    <label for="">Chi nhánh</label>
                    <select class="select2 select-branch" id="select-branch" name="BranchCode">
                        <option value="">--Chi nhánh--</option>
                    </select>
                </div>
            </div>
            <!-- item -->
            <div class="bs-col lg-50 xs-50">
                <div class="modal-item">
                    <label for="">Khối</label>
                    <select class="select2 select-office" id="" name="OfficeCode">
                        <option value="">--Khối--</option>
                    </select>
                </div>
            </div>

        </div>
        <!-- row 2 -->
        <div class="bs-row">
            <!-- item -->
            <div class="bs-col lg-50 xs-50">
                <div class="modal-item">
                    <label for="">Khối</label>
                    <select class="select2 select-dept" id="" name="DepartmentCode">
                        <option value="">--Phòng ban--</option>
                    </select>
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label>Tên nhóm</label>
                    <input placeholder="Nhập tên nhóm" value="@Model.Name" name="Name" />
                </div>
            </div>

        </div>
        <div class="bs-row">
            <!-- item -->
            <div class="bs-col lg-50 xs-50">
                <div class="modal-item">
                    <label for="">Team Leader</label>
                    <select class="select2 select-staff" id="" name="CodeStaffLeader">
                        <option value="">--Team Leader--</option>
                    </select>
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label>Tình trạng</label>
                    <select class="select2" name="StatusTeam">
                        @if (Model.Status)
                        {
                            <option value="1" selected="selected">Hoạt động</option>
                            <option value="0">Không hoạt động</option>
                        }
                        else
                        {
                            <option value="1">Hoạt động</option>
                            <option value="0" selected="selected">Không hoạt động</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="footer-modal">
    <button class="close__btn btn-green btn-update-team"
            type="button">
        Cập nhật
    </button>
    <button modal-show="close"
            class="close__btn btn-gray"
            type="button">
        Hủy bỏ
    </button>
</div>
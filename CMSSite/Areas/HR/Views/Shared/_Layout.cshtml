@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    string currentUrl = Context.Request.Path.Value.ToUpper();
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,  initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>PHẦN MỀM CRM SAILFISH</title>
    @*<link rel="icon" href="/Assets/crm/images/icon/fav_icon.png" type="image/png">*@
    <link rel="stylesheet" type="text/css" href="/Assets/crm/css/tool.min.css" />
    <link rel="stylesheet" type="text/css" href="/Assets/crm/css/main.min.css" />
    <link href="~/css/update.css" rel="stylesheet" />
    <link href="~/css/toastr.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body class="index">
    <div class="loading-wrapper" style="display: none;">
        <div id="loading">
            <div id="loading-dot"></div>
            <div id="loading-dot"></div>
            <div id="loading-dot"></div>
        </div>
    </div>

    <div class="main-web">
        <div class="main-left">
            <div class="logo">
                <a href="#" class="link"><img src="/Assets/crm/images/layout/logo.png" alt="" /></a>
                <span class="show__menu"><i class="fas fa-bars"></i></span>
            </div>
            <div class="menu">
                <span class="close__menu"><i class="fas fa-times"></i></span>
                <div class="menu-list">
                    @*<li class="menu-list__item">
                            <a href="#" class="menu-list__link">
                                <div class="img">
                                    <img src="/Assets/crm/images/layout/dashboard.svg" alt="" class="icon__cover" />
                                    <img src="/Assets/crm/images/layout/dashboard-active.svg"
                                         alt=""
                                         class="icon__hover" />
                                </div>
                                Dashboard
                            </a>
                        </li>*@
                    <li class="menu-list__item">
                        <a asp-area="HR" asp-controller="PersonalInfo" asp-action="Index" class="menu-list__link  @(currentUrl.Contains("/HR/PERSONALINFO") ? "active" : "")">
                            <div class="img">
                                <img src="/Assets/crm/images/layout/employee-manage.svg"
                                     alt=""
                                     class="icon__cover" />
                                <img src="/Assets/crm/images/layout/employee-manage-active.svg"
                                     alt=""
                                     class="icon__hover" />
                            </div>
                            Quản lí nhân sự
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a asp-area="HR" asp-controller="Branchs" asp-action="Index" class="menu-list__link  @(currentUrl.Contains("/HR/BRANCHS") ? "active" : "")">
                            <div class="img">
                                <img src="/Assets/crm/images/layout/QL_chi nhánh.png"
                                     alt=""
                                     class="icon__cover" />
                                <img src="/Assets/crm/images/layout/QL_chi nhánh-1.png"
                                     alt=""
                                     class="icon__hover" />
                            </div>
                            Quản lí chi nhánh
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a asp-area="HR" asp-controller="Offices" asp-action="Index" class="menu-list__link @(currentUrl.Contains("/HR/OFFICES") ? "active" : "")">
                            <div class="img">
                                <img src="/Assets/crm/images/layout/QL_Khối.png"
                                     alt=""
                                     class="icon__cover" />
                                <img src="/Assets/crm/images/layout/QL_Khối-1.png"
                                     alt=""
                                     class="icon__hover" />
                            </div>
                            Quản lí khối
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a asp-area="HR" asp-controller="Departments" asp-action="Index" class="menu-list__link @(currentUrl.Contains("/HR/DEPARTMENTS") ? "active" : "")">
                            <div class="img">
                                <img src="/Assets/crm/images/layout/QL_Phòng ban.png"
                                     alt=""
                                     class="icon__cover" />
                                <img src="/Assets/crm/images/layout/QL_Phòng ban-1.png"
                                     alt=""
                                     class="icon__hover" />
                            </div>
                            Quản lí phòng ban
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a asp-area="HR" asp-controller="Teams" asp-action="Index" class="menu-list__link @(currentUrl.Contains("/HR/TEAMS") ? "active" : "")" >
                            <div class="img">
                                <img src="/Assets/crm/images/layout/QL_Team.png"
                                     alt=""
                                     class="icon__cover" />
                                <img src="/Assets/crm/images/layout/QL_Team-1.png"
                                     alt=""
                                     class="icon__hover" />
                            </div>
                            Quản lí team
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a class="menu-list__link @(currentUrl.Contains("/HR/TIMEKEEPING") ? "active" : "")" asp-area="HR" asp-controller="TimeKeeping" asp-action="Index">
                            <div class="img">
                                <img src="/Assets/crm/images/layout/fingerprint.svg"
                                     alt=""
                                     class="icon__cover" />
                                <img src="/Assets/crm/images/layout/fingerprint-active.svg"
                                     alt=""
                                     class="icon__hover" />
                            </div>
                            Chấm công
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a class="menu-list__link @(currentUrl.Contains("/HR/EARNING") ? "active" : "")" asp-area="HR" asp-controller="Earning" asp-action="Index">
                            <div class="img">
                                <img src="/Assets/crm/images/layout/bang_luong_icon.svg"
                                     alt=""
                                     class="icon__cover" />
                                <img src="/Assets/crm/images/layout/bang_luong_icon-active.svg"
                                     alt=""
                                     class="icon__hover" />
                            </div>
                            Bảng lương
                        </a>
                    </li>
                </div>
                <div class="right">
                    <img src="/Assets/crm/images/layout/right.png" alt="" />
                    <span>© 2021 - Bản quyền thuộc về Công ty CP Bytesoft Việt Nam</span>
                </div>
            </div>
        </div>

        <div class="main-right">

            <div id="header">
                <div class="header_left">
                    <img src="/Assets/crm/images/layout/bars.svg" alt="" />
                    <span>PHẦN MỀM CRM SAILFISH</span>
                </div>
                <div class="header_right">
                    <a href="/Home/Logout">
                        <img title="Đăng xuất" src="/Assets/crm/images/log out.svg" alt="" />
                    </a>
                    @*<img src="/Assets/crm/images/layout/search.svg" alt="" />
                    <img src="/Assets/crm/images/layout/notifications.svg" alt="" />*@
                    <img src="/Assets/crm/images/layout/avt.png" alt="" />
                    <img src="/Assets/crm/images/layout/dots.svg" alt="" />
                </div>
            </div>

            <div id="main">
                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
            <div id="footer"></div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script src="/Assets/crm/js/tool.min.js"></script>
    <script src="/Assets/crm/js/main.min.js"></script>
    <script src="~/js/pagination.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

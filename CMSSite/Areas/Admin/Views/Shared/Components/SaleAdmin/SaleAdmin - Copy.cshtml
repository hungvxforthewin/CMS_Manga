@using CRMSite.ViewModels
@model SaleAdminViewModel

    <h4 class="tab-title">Sale Admin</h4>
    <!-- form -->
    <div class="sale-admin-form">
        <!-- row -->
        <div class="bs-row">
            <!-- col -->
            <div class="bs-col lg-50">
                <div class="input-wrapper">
                    <input type="number" hidden class="IdRoleSalaryStaff" name="IdRoleSalaryStaff" value="@Model.IdRoleSalaryStaff" />
                    <label for="">Lương cứng</label>
                    <div class="input">
                        <input type="number" name="Salary" class="Salary_Sale_Admin" value="@Model.Salary" />
                        <div class="unit">VND</div>
                    </div>
                </div>
            </div>
            <!-- col -->
            <div class="bs-col lg-50">
                <div class="input-wrapper">
                    <label for="">Lương thử việc</label>
                    <div class="input">
                        <input type="number" name="TimeProbationary" class="TimeProbationary_Sale_Admin" value="@Model.TimeProbationary" />
                        <div class="unit">/Tháng</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="bs-row">
            <!-- col -->
            <div class="bs-col lg-50">
                <div class="input-wrapper">
                    <label for="">Thời gian thử việc</label>
                    <div class="input">
                        <input type="number" name="ProbationarySalary" class="ProbationarySalary_Sale_Admin" value="@Model.ProbationarySalary" />
                        <div class="unit">/Tháng</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- table -->
    <div class="leader-sale_bottom">
        <div class="table" style="overflow-x: auto">
            <table>
                <tr>
                    <th></th>
                    <th>Hoa hồng</th>
                    <th>Doanh số cá chi nhánh<br />(Triệu VND)</th>
                    <th></th>
                </tr>
                <!-- row -->
                @if (Model.SaleAdminKpiWithBranches != null)
                {
                    var stt = 0;
                    foreach (var item in Model.SaleAdminKpiWithBranches)
                    {

                        stt = stt + 1;

                        <tr class="adminSaleAdd">
                            <td><label>Level @stt</label></td>
                            <td>
                                <div>
                                    <input hidden value="@item.CodeKpi" name="CodeKpi" />
                                    <input hidden value="@item.CodeRemuneration" name="CodeRemuneration" />
                                    <input hidden value="@item.KpiId" name="KpiId" />
                                    <input hidden value="@item.RemunerationId" name="RemunerationId" />
                                    <input type="number" value="@item.Percent" name="" class="Remuneration_Admin_Sale" />
                                </div>
                            </td>
                            <td class="resize">
                                <div>
                                    <input type="number" value="@item.Revenue" name="" class="Revenue_Admin_Sale" />
                                </div>
                            </td>
                            <td>
                                <img onclick="RemoveSalaryForSaleAdmin(this)" src="/Assets/crm/images/mechanism/delete.svg"
                                     alt="" />
                            </td>

                        </tr>
                    }
                }

                <tr class="row_add" onclick="AddSalaryForLeaderSale(this)">
                    <td colspan="4">
                        <div class="add-item">
                            <img src="/Assets/crm/images/mechanism/add.svg" alt="" />
                        </div>
                    </td>
                </tr>
            </table>
        </div>


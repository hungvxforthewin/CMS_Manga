<!-- sale -->
<div class="sale" id="sale">
    <h4 class="tab-title">Sale</h4>
    <input type="hidden" name="Id" class="sale-id" />
    <input type="hidden" name="CodeKpi" class="sale-kpi-code" />
    <!-- table -->
    <div class="table" style="overflow-x: auto">
        <form class="remunerations">
            <table>
                <tr>
                    <th></th>
                    <th>Hoa hồng</th>
                    <th>Cổ phần</th>
                    <th>Lương cứng</th>
                    <th>Doanh số cá nhân</th>
                    <th></th>
                </tr>

                <!-- row -->
                <tr class="value">
                    <td>Level 1</td>
                    <td>
                        <input type="number" class="isPercent" name="PercentRemuneration" min="0" value="" />
                    </td>
                    <td>
                        <input type="number" class="isPercent" name="CalculatingSharePercent" min="0" value="" />
                    </td>
                    <td>
                        <input type="text" class="isNumber" name="Salary" value="" />
                    </td>
                    <td class="resize">
                        <input type="text" class="revenue-range" name="RevenueRange" value="" />
                    </td>
                    <td>
                        <img onclick="RemoveSalaryForSale(this)" src="/Assets/crm/images/mechanism/delete.svg"
                             alt="" />
                    </td>
                </tr>

                <!-- row -->
                <tr class="row_add">
                    <td colspan="5">
                        <div class="add-item" onclick="AddSalaryForSale(this)">
                            <img src="/Assets/crm/images/mechanism/add.svg" alt="" style="cursor: pointer;" />
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <!-- kpi -->
    <div class="kpi">
        <div class="kpi_left">
            <div class="title">
                <h4>KPI 6 tháng đầu</h4>

                <div class="handle">

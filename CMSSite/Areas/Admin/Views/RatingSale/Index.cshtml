<section class="section_admin_showup-concern-level-manage">
    <div class="module-title">
        <img src="/Assets/crm/images/layout/left-arrow.svg" alt="" />
        <h2>Quản lý doanh số Sale</h2>
    </div>

    <div class="module-content">
        <div class="search" id="search-sale" style="margin: 56px 51px 0;">
            <form id="search-sale-form">
                <div class="bs-row" style="width: 100%;">
                    <!-- col -->
                    <div class="bs-col md-25 xs-50">
                        <div class="search-item input-group">
                            <label>Chi nhánh</label>
                            <select class="select2 select-branch" name="Branch">
                                <option value="">-Chọn chi nhánh-</option>

                            </select>
                        </div>
                    </div>
                    <!-- col -->
                    <div class="bs-col md-25 xs-50">
                        <div class="search-item input-group">
                            <label>Khối</label>
                            <select class="select2 select-office" name="Office">
                                <option value="">-Chọn khối-</option>

                            </select>
                        </div>
                    </div>
                    <!-- col -->
                    <div class="bs-col md-25 xs-50">
                        <div class="search-item input-group">
                            <label>Phòng ban</label>
                            <select class="select2 select-department" name="Department">
                                <option value="">-Chọn phòng ban-</option>

                            </select>
                        </div>
                    </div>
                    <!-- col -->
                    <div class="bs-col md-25 xs-50">
                        <div class="search-item input-group">
                            <label>Nhóm</label>
                            <select class="select2 select-team" name="Team">
                                <option value="">-Chọn team-</option>

                            </select>
                        </div>
                    </div>
                    <!-- col -->
                    <div class="bs-col md-25 xs-50">
                        <div class="search-item input-group">
                            <label>Nhân viên</label>
                            <select class="select2 select-staff" name="Sale">
                                <option value="">-Nhân viên-</option>

                            </select>
                        </div>
                    </div>
                    <!-- col -->
                    <div class="bs-col md-25 xs-50">
                        <div class="search-item input-group">
                            <label>Tìm kiếm theo tên</label>
                            <input type="text" placeholder="Tên nhân viên" name="Key" />
                        </div>
                    </div>
                    <!-- col -->
                    <div class="bs-col md-25 xs-50">
                        <div class="search-item input-group">
                            <label>Ngày</label>
                            <div class="date-select">
                                <input type="text" class="search__input autofill_today" name="DateRevenue">
                                <img src="/Assets/SA/images/layout/date.svg" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- col -->
                    <div class="bs-col md-25 xs-50" style="padding-top: 19px;">
                        <div class="button-search-sale" style="width: 110%;">
                            <button style="width: 111px" type="button" id="btn-search-sale" class="btn-green">Tìm kiếm</button>
                            <button style="width: 111px" type="button" class="btn-green" modal-show="show"
                                    modal-data="#employee-sales-add">
                                Thêm mới
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="data-table tr-bordered" style="margin: 0 50px; overflow: auto;">
            <table style="min-width: 1500px;">
                <tbody id="table-body">
                    <tr>
                        <th>Tên nhân viên</th>
                        <th>Mã nhân viên</th>
                        <th>Chi nhánh</th>
                        <th>Khối</th>
                        <th>Phòng ban</th>
                        <th>Nhóm</th>
                        <th>Doanh số</th>
                        <th>Action</th>
                    </tr>
                   
                </tbody>
            </table>
            <div class="select_pagination">
                <div class="select" id="size-page">
                    <p>Hiển thị từ <span class="from"></span> đến <span class="to"></span> trong tổng số <span class="total"></span> bản ghi. Hiển thị</p>
                    <select>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                    </select>
                    <p>&nbsp;bản ghi trên trang.</p>
                </div>
                <div class="pagination" id="pagination">
                </div>
            </div>
            <!--Modal Add-->
            <div class="bs-modal employee-sales" id="employee-sales-add">
                <div class="modal-frame">
                    <div class="content-modal">
                        <div class="header-modal">
                            <h3 class="modal__title">Thêm mới doanh số</h3>
                            <span title="close" modal-show="close" class="close__modal">
                                <img src="/Assets/SA/images/layout/close-modal.svg" />
                            </span>
                        </div>
                        <form id="frm-employee-sales-add">
                            @Html.AntiForgeryToken()
                            <div class="body-modal">
                                <div class="bs-row">

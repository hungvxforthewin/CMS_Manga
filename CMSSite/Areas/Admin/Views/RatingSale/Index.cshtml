                                            <label>Chi nhánh</label>
                                            <select class="select2 select-branch" name="Branch">
                                                <option value="">-Chọn chi nhánh-</option>

                                            </select>
                                        </div>
                                    </div>
                                    <!-- modal item -->
                                    <div class="bs-col md-33">
                                        <div class="modal-item">
                                            <label>Khối</label>
                                            <select class="select2 select-office" name="Office">
                                                <option value="">-Chọn khối-</option>

                                            </select>
                                        </div>
                                    </div>
                                    <!-- modal item -->
                                    <div class="bs-col md-33">
                                        <div class="modal-item">
                                            <label>Phòng ban</label>
                                            <select class="select2 select-department" name="Department">
                                                <option value="">-Chọn phòng ban-</option>

                                            </select>
                                        </div>
                                    </div>
                                    <!-- modal item -->
                                    <div class="bs-col md-33">
                                        <div class="modal-item">
                                            <label>Team</label>
                                            <select class="select2 select-team" name="Team">
                                                <option value="">-Chọn team-</option>

                                            </select>
                                        </div>
                                    </div>
                                    <!-- modal item -->
                                    <div class="bs-col md-33">
                                        <div class="modal-item">
                                            <label>Nhân viên Sale</label>
                                            <select class="select2 select-staff" name="Sale">
                                                <option value="">-Chọn nhân viên-</option>

                                            </select>
                                        </div>
                                    </div>

                                </div>
                                <div class="bs-row">
                                    <!-- modal item -->
                                    <div class="bs-col md-33">
                                        <div class="modal-item">
                                            <label>Ngày</label>
                                            <div class="date-select">
                                                <input type="text" class="search__input autofill_today" name="RevenueDate">
                                                <img src="/Assets/SA/images/layout/date.svg" alt="">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- modal item -->
                                    <div class="bs-col md-66">
                                        <div class="modal-item">
                                            <label>Doanh số</label>
                                            <input type="text" name="RevenueSale" class="isNumberF" />
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="footer-modal">
                                <div class="group-button">
                                    <button type="button" class="btn-gray">Hủy bỏ</button>
                                    <button type="button" class="btn-green btn-add-rating">Thêm mới</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <!--Modal Edit-->

@using CMSBussiness.ViewModel
@model BookViewModel
<div class="header-modal">
    <h3 class="modal__title">Chỉnh sửa truyện</h3>
    <span title="close" modal-show="close" class="close__modal">
        <img src="/Assets/SA/images/layout/close-modal.svg" />
    </span>
</div>

<form id="frm-book-edit">
    @Html.AntiForgeryToken()
    <div class="body-modal">
        <div class="bs-row">
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <input type="hidden" class="hidden-category" value="@Model.CategoryIdsStr" />
                    <label>Danh mục</label>
                    <select class="select2 select-category" multiple="multiple" name="CategoryIds">
                        <option value="">-- Danh mục --</option>

                    </select>
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <input type="hidden" class="hidden-authorAccountId" value="@Model.authorAccountId" />
                    <label>Tác giả</label>
                    <select class="select2 select-author" name="authorAccountId">
                        <option value="">-- Tác giả --</option>

                    </select>
                </div>
            </div>
        </div>
        <div class="bs-row">
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <input type="hidden" class="hidden-bookSexId" value="@Model.bookSexId" />
                    <label>Giới tính</label>
                    <select class="select2 select-sex" name="bookSexId">
                        <option value="">-- Đối tượng --</option>

                    </select>
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <input type="hidden" class="hidden-isEnable" value="@(Model.isEnable ? "true" : "false")" />
                    <label>Trạng thái</label>
                    <select class="select2 select-status" name="isEnable">
                        <option value="">-- Trạng thái --</option>

                    </select>
                </div>
            </div>
            <input type="text" hidden name="BookId" value="@Model.BookId" />
        </div>
        <div class="bs-row">
            <!-- modal item -->
            <div class="bs-col md-100">
                <div class="modal-item">
                    <label>Tên sách</label>
                    <input type="text" name="BookName" value="@Model.BookName" />
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-100">
                <div class="modal-item">
                    <label>Mô tả</label>
                    <textarea type="text" name="BookDescription" style="max-height: 100px">@Model.BookDescription</textarea>
                </div>
            </div>
        </div>
        <div class="bs-row">
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label>Độ tuổi giới hạn</label>
                    <input type="text" name="adultLimit" class="isNumberF" value="@Model.adultLimit" />
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <input type="hidden" class="hidden-commentAllowed" value="@(Model.commentAllowed ? "true" : "false")" />
                    <label>Cho phép bình luận</label>
                    <select class="select2 select-commentAllowed" name="commentAllowed">
                    </select>
                </div>
            </div>
        </div>
        <div class="bs-row">
            <!-- modal item -->
            <div class="bs-col md-33">
                <div class="modal-item">
                    <label>Điểm đánh giá</label>
                    <input type="text" name="" disabled="disabled" class="isNumberF" value="@Model.Rating" />
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-33">
                <div class="modal-item">
                    <label>Số lượt Like</label>
                    <input type="text" name="" disabled="disabled" class="isNumberF" value="@Model.LikeNo" />
                </div>
            </div>
            <!-- modal item -->
            <div class="bs-col md-33">
                <div class="modal-item">
                    <label>Số lượt Follow</label>
                    <input type="text" name="" disabled="disabled" class="isNumberF" value="@Model.FollowNo" />
                </div>
            </div>
        </div>
    </div>


    <div class="footer-modal">
        <div class="group-button">
            <button type="button" class="btn-gray close__modal"  modal-show="close">Hủy bỏ</button>
            <button type="button" class="btn-green" id="btn-update-book">Cập nhật</button>
        </div>
    </div>
</form>
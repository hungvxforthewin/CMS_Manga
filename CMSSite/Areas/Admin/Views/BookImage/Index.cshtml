@section Styles{
    <link rel="stylesheet" href="~/Content/css/style.css" />

}
<style>
    .modal-item .label {
        color: #828282;
        font-size: 16px;
        line-height: 24px;
        font-weight: 400;
        text-align: left;
    }

    .modal-item .detail {
        text-align: right;
        color: #4f4f4f;
        line-height: 24px;
    }

    #search-book-image-form {
        width: 100%
    }

    #table-body tr th {
        padding: 5px;
        border: 1px solid #b7bbbf;
    }

    #table-body tr td {
        padding: 20px 10px;
        border: 1px solid #b7bbbf;
    }

    #table-body tr:hover td {
        background-color: #f8f8f9;
        border: 1px solid #b7bbbf !important;
    }

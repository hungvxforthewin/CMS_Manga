                                <div class="modal-item">
                                    <p class="label">Phòng ban</p>
                                    <p class="detail">Phòng ban 1</p>
                                </div>
                                <div class="modal-item">
                                    <p class="label">Nhóm</p>
                                    <p class="detail">Nhóm 2</p>
                                </div>
                                <div class="modal-item">
                                    <p class="label">Doanh số</p>

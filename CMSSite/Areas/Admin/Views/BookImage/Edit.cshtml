@using CMSBussiness.ViewModel
@using CRMBussiness.ViewModel
@model BookImageViewModel

<div class="header-modal">
    <h3 class="modal__title">Chỉnh sửa banner</h3>
    <span title="close" modal-show="close" class="close__modal">
        <img src="/Assets/SA/images/layout/close-modal.svg" />
    </span>
</div>
<form id="frm-book-edit">
    @Html.AntiForgeryToken()
    <div class="body-modal">
        <div class="bs-row">
            <!-- modal item -->
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label>Truyện</label>
                    <input hidden name="selected-bookid" value="@Model.BookId" />
                    <input hidden name="selected-imgid" value="@Model.imgId" />
                    @if (Model.IsBanner)
                    {
                        <input hidden name="selected-isbanner" value="true" />

                    }
                    else
                    {
                        <input hidden name="selected-isbanner" value="false" />

                    }
                    <select class="select2 select-book" name="BookId">
                        <option value="">-- Truyện --</option>

                    </select>
                </div>
            </div>
            <div class="bs-col md-50">
                <div class="modal-item">
                    <label>loại</label>
                    <select class="select2 select-IsBanner" name="IsBanner">
                    </select>
                </div>
            </div>
        </div>
        <div class="bs-row">
            <div class="bs-col md-100">
                <div class="modal-item">
                    <label>Hình ảnh</label>
                    <input id="myFile" type="file" Class="form-control" />
                </div>
                <div id="divImageMediaPreview">
                    <img />
                </div>
            </div>
            <input hidden id="myFileName" name="imgUrl" type="text" />
        </div>
    </div>


    <div class="footer-modal">
        <div class="group-button">
            <button type="button" modal-show="close" class="btn-gray close__modal">Hủy bỏ</button>
            <button type="button" class="btn-green" id="btn-update-book">Update</button>
        </div>
    </div>
</form>
<section class="section_admin_seniority-manage">
    <div class="module-title">
        <img src="/Assets/crm/images/layout/left-arrow.svg" alt="" />
        <h2>FILE HỆ THỐNG</h2>
    </div>

    <div class="module-content">
        <div class="search">
            <div class="search-item input-group">
                <label>Từ khóa</label>
                <input placeholder="Tên tệp tin, lý do" id="search-key" />
            </div>
            <button class="btn-green" id="search-file">Tìm kiếm</button>
        </div>

        <div class="handle">
            <button class="add handle-button"
                    type="button"
                    id="Add-File"
                    modal-show="show"
                    modal-data="#admin_file-manage_add-modal">
                <img src="/Assets/crm/images/employee-manage/add.svg" alt="" /> Thêm mới
            </button>
            <button class="edit handle-button"
                    type="button"
                    id="Update-File">
                <div class="icon">
                    <img src="/Assets/crm/images/employee-manage/edit.svg" alt="" />
                </div>
                Chỉnh sửa
            </button>
            <button class="delete handle-button"
                    type="button"
                    id="Delete-File">
                <div class="icon">
                    <img src="/Assets/crm/images/employee-manage/delete.svg" alt="" />
                </div>
                Xóa
            </button>
        </div>

        <div class="data-table tr-bordered">
            <table style="min-width: 1200px;">
                <tbody id="table-body">
                    <tr>
                        <th>
                            <div class="custom-checkbox">
                                <input type="checkbox" />
                                <span class="checkmark"></span>
                            </div>
                        </th>
                        <th>STT</th>
                        <th>File</th>
                        <th style="max-width: 300px;">Mô tả</th>
                        <th>Ngày tải lên</th>
                        <th>Người tải lên</th>
                        <th>Ngày cập nhật</th>
                        <th>Người cập nhật</th>
                    </tr>
                </tbody>
            </table>

            <div class="select_pagination">
                <div class="select" id="size-page">
                    <p>Hiển thị từ <span class="from"></span> đến <span class="to"></span> trong tổng số <span class="total"></span> bản ghi. Hiển thị</p>
                    <select>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                    </select>
                    <p>&nbsp;bản ghi trên trang.</p>
                </div>
                <div class="pagination" id="pagination">
                </div>
            </div>
        </div>

        <!-- modals -->
        <div class="bs-modal" id="admin_file-manage_add-modal">
            <div class="modal-frame">
                <div class="content-modal">
                    <partial name="_Create.cshtml" />
                </div>
            </div>
        </div>

        <div class="bs-modal" id="admin_file-manage_edit-modal">
            <div class="modal-frame">
                <div class="content-modal">

                </div>
            </div>
        </div>

        <div class="bs-modal delete-modal" id="admin_file-manage_delete-modal">
            <div class="modal-frame">
                <div class="content-modal">

                </div>
            </div>
        </div>

        <div class="bs-modal view-modal" id="admin_file-manage_view-modal">
            <div class="modal-frame">
                <div class="content-modal">

                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts{ 
    <script src="~/js/controllers/file.js"></script>
}
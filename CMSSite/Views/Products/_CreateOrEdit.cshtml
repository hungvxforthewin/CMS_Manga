@using CRMModel.Models
@model Product
@{
    bool IsView = ViewBag.IsView;
    Dictionary<int, string> status = (Dictionary<int, string>)ViewBag.status;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>
@if (IsView)
{
    @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form form-horizontal", @id = "frmAdd", @autocomplete = "off" }))
    {
        <div class="modal-body">
            <div class="form-group">
                @*<div class="form-group col-md-6">
                        <label>Product Code</label>
                        <input type="text" class="form-control" id="ProductCode" value="@Model.ProductCode" readonly />
                    </div>*@
                <div class="form-group col-md-6">
                    <label>Name</label>
                    <input type="text" class="form-control" id="Name" value="@Model.Name" readonly>
                </div>
                <div class="form-group col-md-6">
                    <label>Status</label>
                    <select class="form-control" name="Calculation" id="Calculation">
                        @foreach (var item in status)
                        {
                            if (item.Key == 1)
                            {
                                <option selected="selected" value="@item.Key">@item.Value</option>
                            }
                            else
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group col-md-6">
                    <label>Infomation</label>
                    <input type="text" class="form-control" id="Infomation" value="@Model.Infomation" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label>Company Code</label>
                    <input type="text" class="form-control" id="CompanyCode" value="@Model.CompanyCode" readonly>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            @if (!IsView)
            {
                <button type="submit" class="btn btn-success" id="btnSubmit">Lưu lại</button>
            }
            <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
        </div>
    }

}
else
{
    @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form form-horizontal", @id = "frmAdd", @autocomplete = "off" }))
    {
        <div class="modal-body">
            <div class="form-group">
                @*<div class="form-group col-md-6">
                        <label>Product Code</label>
                        <input type="text" class="form-control" id="ProductCode" value="@Model.ProductCode" />
                    </div>*@
                <div class="form-group col-md-6">
                    <label>Name</label>
                    <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name">
                </div>
                <div class="form-group col-md-6">
                    <label>Status</label>
                    <select class="form-control" name="Calculation" id="Calculation">
                        @foreach (var item in status)
                        {
                            if (item.Key == 1)
                            {
                                <option selected="selected" value="@item.Key">@item.Value</option>
                            }
                            else
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group col-md-6">
                    <label>Infomation</label>
                    <input type="text" class="form-control" name="Infomation" id="Infomation" value="@Model.Infomation" />
                </div>
                <div class="form-group col-md-6">
                    <label>Company Code</label>
                    <input type="text" class="form-control" name="CompanyCode" id="CompanyCode" value="@Model.CompanyCode">
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            @if (!IsView)
            {
                <button type="submit" class="btn btn-success" id="btnSubmit">Lưu lại</button>
            }
            <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
        </div>
    }
}
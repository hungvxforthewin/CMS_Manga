<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Dashbroad"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Admin</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<div class="content-body">
    <div class="panel panel-info">
        <div class="panel-heading">
            @ViewBag.Title
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-group col-sm-12 col-xs-12 col-md-12">
                        <input type="text" id="txtsearch" class="form-control" placeholder="Tên sản phẩm, ID" />
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="">
                        <button class="btn btn-info" type="button" id="btnSearch">
                            <i class="glyphicon glyphicon-search"></i> <span class="hidden-xs hidden-sm">Tìm kiếm</span>
                        </button>
                        @if (ViewBag.IsAdd)
                        {
                            <button type="button" id="btnAdd" class="btn btn-success left5" data-toggle="modal" data-target="#createCustomerModal">
                                <i class="glyphicon glyphicon-plus"></i> <span class="hidden-xs hidden-sm">Thêm Mới</span>
                            </button>
                            <button class="btn btn-danger hidden-sm hidden-xs left5" id="btnDoneExportExcel" type="button"><i class="fa fa-download" aria-hidden="true"></i><span class="hidden-sm hidden-xs">Export</span></button>
                        }
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-2">
                    <div class="input-group col-sm-12 col-xs-12 col-md-12">
                        <select class="form-control select2" id="drdView">
                            <option value="0">-- Tác vụ --</option>
                            <option value="1" id="">Xem thông tin </option>
                            <option value="2" id="">Sửa thông tin </option>
                            <option value="3" id="">Xóa thông tin </option>
                        </select>
                    </div>
                </div>
            </div>
            <table id="tblCustomer" class="table" data-toolbar="#toolbar"></table>
        </div>
    </div>
</div>